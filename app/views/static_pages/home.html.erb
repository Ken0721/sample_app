<% provide(:title, "Home") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="project_form">
        <%= render 'shared/project_form' %>
      </section>
    </aside>
		<div class="col-md-8">
			<h3>Project List</h3>
			<%= render 'shared/feed'%>
		</div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Project Sharing</h1>

  <h2>
   	This is the Project Sharing Service. 
    <a href="http://www.railstutorial.org/">using Ruby on Rails</a>
    - created by Ken Bean
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo", width:140, height:200),
            'http://rubyonrails.org/' %>
<% end %>
